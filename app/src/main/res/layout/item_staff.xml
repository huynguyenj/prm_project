<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/avatar_background"
            android:padding="4dp"
            android:src="@drawable/baseline_account_box_24"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEmail"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPhone"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvStatus"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUpdateStaff"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:textSize="14sp"
                    android:backgroundTint="@color/button_edit"
                    android:textColor="@color/text_on_dark"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnDeleteStaff"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:textSize="14sp"
                    android:backgroundTint="@color/button_delete"
                    android:textColor="@color/text_on_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
