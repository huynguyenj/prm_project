                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".activities.dealer_staff.DealerStaffMainActivity"/>
        <activity android:name=".activities.evm_staff.EvmStaffMainActivity"/>
        <activity android:name=".activities.admin.AdminMainActivity"/>
